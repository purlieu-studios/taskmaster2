<UserControl x:Class="TaskMaster.Views.TaskListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:TaskMaster.ViewModels">

    <UserControl.Resources>
        <!-- Task Card Style -->
        <Style x:Key="TaskCard" TargetType="Border">
            <Setter Property="Background" Value="#1A1F2E"/>
            <Setter Property="BorderBrush" Value="#374151"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="MinHeight" Value="140"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="0" Color="#000000" Opacity="0.2" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#7C3AED"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect ShadowDepth="0" Color="#7C3AED" Opacity="0.3" BlurRadius="16"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Status Badge Style -->
        <Style x:Key="StatusBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <!-- Type Badge Style -->
        <Style x:Key="TypeBadge" TargetType="Border">
            <Setter Property="Background" Value="#374151"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <!-- Card Button Style -->
        <Style x:Key="CardButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Task Cards in ScrollViewer -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
                      Padding="24,20">
            <ItemsControl ItemsSource="{Binding FilteredTasks}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Command="{Binding DataContext.SelectTaskCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}" Style="{StaticResource CardButton}">
                            <Border Style="{StaticResource TaskCard}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>  <!-- Header Row -->
                                        <RowDefinition Height="Auto"/>  <!-- Title Row -->
                                        <RowDefinition Height="*"/>     <!-- Summary Row -->
                                        <RowDefinition Height="Auto"/>  <!-- Footer Row -->
                                    </Grid.RowDefinitions>

                                    <!-- Header Row: Number and Status -->
                                    <Grid Grid.Row="0" Margin="0,0,0,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Task Number -->
                                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                                            <TextBlock Text="{Binding Number, StringFormat='#{0}'}"
                                                       Foreground="#A78BFA" FontWeight="Bold" FontSize="16"
                                                       VerticalAlignment="Center"/>
                                            <Border Style="{StaticResource TypeBadge}" Margin="12,0,0,0">
                                                <TextBlock Foreground="#D1D5DB" FontSize="10" FontWeight="Medium">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Type}" Value="feature">
                                                                    <Setter Property="Text" Value="ðŸš€ FEATURE"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Type}" Value="bug">
                                                                    <Setter Property="Text" Value="ðŸ› BUG"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Type}" Value="enhancement">
                                                                    <Setter Property="Text" Value="âœ¨ ENHANCEMENT"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Type}" Value="test">
                                                                    <Setter Property="Text" Value="ðŸ§ª TEST"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Type}" Value="refactor">
                                                                    <Setter Property="Text" Value="ðŸ”§ REFACTOR"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                        </StackPanel>

                                        <!-- Status Badge and Date -->
                                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                                            <Border>
                                                <Border.Style>
                                                    <Style TargetType="Border" BasedOn="{StaticResource StatusBadge}">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Todo">
                                                                <Setter Property="Background" Value="#374151"/>
                                                                <Setter Property="BorderBrush" Value="#6B7280"/>
                                                                <Setter Property="BorderThickness" Value="1"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="InProgress">
                                                                <Setter Property="Background" Value="#F59E0B"/>
                                                                <Setter Property="BorderBrush" Value="#F59E0B"/>
                                                                <Setter Property="BorderThickness" Value="1"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Done">
                                                                <Setter Property="Background" Value="#10B981"/>
                                                                <Setter Property="BorderBrush" Value="#10B981"/>
                                                                <Setter Property="BorderThickness" Value="1"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Cancelled">
                                                                <Setter Property="Background" Value="#EF4444"/>
                                                                <Setter Property="BorderBrush" Value="#EF4444"/>
                                                                <Setter Property="BorderThickness" Value="1"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Foreground="White" FontSize="11" FontWeight="SemiBold">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status}" Value="Todo">
                                                                    <Setter Property="Text" Value="ðŸ“ TODO"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="InProgress">
                                                                    <Setter Property="Text" Value="â³ IN PROGRESS"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Done">
                                                                    <Setter Property="Text" Value="âœ… DONE"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Cancelled">
                                                                    <Setter Property="Text" Value="âŒ CANCELLED"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                            <TextBlock Text="{Binding Created, StringFormat='MMM dd'}"
                                                       Foreground="#6B7280" FontSize="12" FontWeight="Medium"
                                                       VerticalAlignment="Center" Margin="12,0,0,0"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Title Row -->
                                    <TextBlock Grid.Row="1" Text="{Binding Title}" FontWeight="SemiBold" FontSize="18"
                                               Foreground="#F9FAFB" TextWrapping="Wrap"
                                               Margin="0,0,0,8" LineHeight="24"/>

                                    <!-- Summary Row -->
                                    <TextBlock Grid.Row="2" Text="{Binding Summary}" FontSize="13" Foreground="#9CA3AF"
                                               TextWrapping="Wrap" LineHeight="20"
                                               Margin="0,0,0,16" VerticalAlignment="Top"/>

                                    <!-- Footer Row: Additional metadata can go here -->
                                    <Grid Grid.Row="3">
                                        <TextBlock Text="Click to view details" FontSize="11"
                                                   Foreground="#7C3AED" FontStyle="Italic"
                                                   HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
                                    </Grid>
                                </Grid>
                            </Border>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Pagination Footer -->
        <Border Grid.Row="1" Background="#1A1F2E" BorderBrush="#374151" BorderThickness="0,1,0,0" Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Task Count -->
                <TextBlock Grid.Column="0" Text="{Binding TaskCountText}" VerticalAlignment="Center"
                           FontWeight="Medium" FontSize="13" Foreground="#F9FAFB"/>

                <!-- Pagination Controls -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="â®ï¸" Command="{Binding FirstPageCommand}"
                            Background="#1F2937" BorderBrush="#374151" BorderThickness="1" FontWeight="Normal"
                            FontSize="12" Foreground="#9CA3AF" Width="32" Height="28" Margin="0,0,4,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#374151"/>
                                        <Setter Property="BorderBrush" Value="#7C3AED"/>
                                        <Setter Property="Foreground" Value="#F9FAFB"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="â—€ï¸" Command="{Binding PreviousPageCommand}"
                            Background="#1F2937" BorderBrush="#374151" BorderThickness="1" FontWeight="Normal"
                            FontSize="12" Foreground="#9CA3AF" Width="32" Height="28" Margin="0,0,8,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#374151"/>
                                        <Setter Property="BorderBrush" Value="#7C3AED"/>
                                        <Setter Property="Foreground" Value="#F9FAFB"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <TextBlock Text="{Binding CurrentPage}" VerticalAlignment="Center" Margin="0,0,6,0"
                               FontSize="12" Foreground="#F9FAFB" FontWeight="Medium"/>
                    <TextBlock Text="of" VerticalAlignment="Center" Margin="0,0,6,0"
                               FontSize="12" Foreground="#D1D5DB"/>
                    <TextBlock Text="{Binding TotalPages}" VerticalAlignment="Center" Margin="0,0,12,0"
                               FontSize="12" Foreground="#F9FAFB" FontWeight="Medium"/>

                    <Button Content="â–¶ï¸" Command="{Binding NextPageCommand}"
                            Background="#1F2937" BorderBrush="#374151" BorderThickness="1" FontWeight="Normal"
                            FontSize="12" Foreground="#9CA3AF" Width="32" Height="28" Margin="0,0,4,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#374151"/>
                                        <Setter Property="BorderBrush" Value="#7C3AED"/>
                                        <Setter Property="Foreground" Value="#F9FAFB"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="â­ï¸" Command="{Binding LastPageCommand}"
                            Background="#1F2937" BorderBrush="#374151" BorderThickness="1" FontWeight="Normal"
                            FontSize="12" Foreground="#9CA3AF" Width="32" Height="28" Margin="0,0,16,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#374151"/>
                                        <Setter Property="BorderBrush" Value="#7C3AED"/>
                                        <Setter Property="Foreground" Value="#F9FAFB"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <TextBlock Text="ðŸ“„ Cards per page" VerticalAlignment="Center" Margin="0,0,8,0"
                               FontWeight="Medium" FontSize="11" Foreground="#D1D5DB"/>
                    <ComboBox SelectedValue="{Binding PageSize}" SelectedValuePath="Content" Width="60" Height="28"
                              Background="#1F2937" BorderBrush="#374151" BorderThickness="1" FontSize="11"
                              Foreground="#F9FAFB" Padding="8,4">
                        <ComboBoxItem Content="12"/>
                        <ComboBoxItem Content="24" IsSelected="True"/>
                        <ComboBoxItem Content="48"/>
                        <ComboBoxItem Content="96"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>