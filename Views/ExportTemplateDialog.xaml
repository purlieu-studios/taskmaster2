<Window x:Class="TaskMaster.Views.ExportTemplateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Export Project Template"
        Height="500"
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Export Project Template"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- Template Name -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Template Name:" Width="120" VerticalAlignment="Center"/>
            <TextBox Text="{Binding TemplateName, UpdateSourceTrigger=PropertyChanged}"
                     Width="300"
                     Height="25"/>
        </StackPanel>

        <!-- Output Path -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Output Path:" Width="120" VerticalAlignment="Center"/>
            <TextBox Text="{Binding OutputPath, UpdateSourceTrigger=PropertyChanged}"
                     Width="250"
                     Height="25"/>
            <Button Content="Browse..."
                    Command="{Binding BrowseOutputPathCommand}"
                    Width="80"
                    Height="25"
                    Margin="10,0,0,0"/>
        </StackPanel>

        <!-- File Preview -->
        <GroupBox Grid.Row="3" Header="Files to Include" Margin="0,10,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="{Binding FileCountText}"
                           Margin="5"
                           FontWeight="Bold"/>

                <ListBox Grid.Row="1"
                         ItemsSource="{Binding FilesToInclude}"
                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         Margin="5">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" FontFamily="Consolas" FontSize="11"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </GroupBox>

        <!-- Progress -->
        <StackPanel Grid.Row="4"
                    Visibility="{Binding IsExporting, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Margin="0,10,0,10">
            <TextBlock Text="{Binding ProgressStage}" Margin="0,0,0,5"/>
            <ProgressBar Value="{Binding ProgressPercent}"
                         Height="20"
                         Minimum="0"
                         Maximum="100"/>
            <TextBlock Text="{Binding CurrentFile}"
                       FontSize="10"
                       Foreground="Gray"
                       Margin="0,2,0,0"/>
        </StackPanel>

        <!-- Status -->
        <TextBlock Grid.Row="5"
                   Text="{Binding StatusMessage}"
                   Margin="0,5,0,10"
                   Foreground="{Binding StatusColor}"
                   FontWeight="Bold"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="6"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Refresh Preview"
                    Command="{Binding RefreshPreviewCommand}"
                    Width="120"
                    Height="30"
                    Margin="0,0,10,0"
                    IsEnabled="{Binding CanRefresh}"/>
            <Button Content="Export"
                    Command="{Binding ExportCommand}"
                    Width="80"
                    Height="30"
                    Margin="0,0,10,0"
                    IsDefault="True"
                    IsEnabled="{Binding CanExport}"/>
            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    Width="80"
                    Height="30"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>