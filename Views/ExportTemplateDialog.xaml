&lt;Window x:Class="TaskMaster.Views.ExportTemplateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Export Project Template"
        Height="500"
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"&gt;

    &lt;Grid Margin="20"&gt;
        &lt;Grid.RowDefinitions&gt;
            &lt;RowDefinition Height="Auto"/&gt;
            &lt;RowDefinition Height="Auto"/&gt;
            &lt;RowDefinition Height="Auto"/&gt;
            &lt;RowDefinition Height="*"/&gt;
            &lt;RowDefinition Height="Auto"/&gt;
            &lt;RowDefinition Height="Auto"/&gt;
            &lt;RowDefinition Height="Auto"/&gt;
        &lt;/Grid.RowDefinitions&gt;

        &lt;!-- Title --&gt;
        &lt;TextBlock Grid.Row="0"
                   Text="Export Project Template"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/&gt;

        &lt;!-- Template Name --&gt;
        &lt;StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10"&gt;
            &lt;TextBlock Text="Template Name:" Width="120" VerticalAlignment="Center"/&gt;
            &lt;TextBox Text="{Binding TemplateName, UpdateSourceTrigger=PropertyChanged}"
                     Width="300"
                     Height="25"/&gt;
        &lt;/StackPanel&gt;

        &lt;!-- Output Path --&gt;
        &lt;StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10"&gt;
            &lt;TextBlock Text="Output Path:" Width="120" VerticalAlignment="Center"/&gt;
            &lt;TextBox Text="{Binding OutputPath, UpdateSourceTrigger=PropertyChanged}"
                     Width="250"
                     Height="25"/&gt;
            &lt;Button Content="Browse..."
                    Command="{Binding BrowseOutputPathCommand}"
                    Width="80"
                    Height="25"
                    Margin="10,0,0,0"/&gt;
        &lt;/StackPanel&gt;

        &lt;!-- File Preview --&gt;
        &lt;GroupBox Grid.Row="3" Header="Files to Include" Margin="0,10,0,10"&gt;
            &lt;Grid&gt;
                &lt;Grid.RowDefinitions&gt;
                    &lt;RowDefinition Height="Auto"/&gt;
                    &lt;RowDefinition Height="*"/&gt;
                &lt;/Grid.RowDefinitions&gt;

                &lt;TextBlock Grid.Row="0"
                           Text="{Binding FileCountText}"
                           Margin="5"
                           FontWeight="Bold"/&gt;

                &lt;ListBox Grid.Row="1"
                         ItemsSource="{Binding FilesToInclude}"
                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         Margin="5"&gt;
                    &lt;ListBox.ItemTemplate&gt;
                        &lt;DataTemplate&gt;
                            &lt;TextBlock Text="{Binding}" FontFamily="Consolas" FontSize="11"/&gt;
                        &lt;/DataTemplate&gt;
                    &lt;/ListBox.ItemTemplate&gt;
                &lt;/ListBox&gt;
            &lt;/Grid&gt;
        &lt;/GroupBox&gt;

        &lt;!-- Progress --&gt;
        &lt;StackPanel Grid.Row="4"
                    Visibility="{Binding IsExporting, Converter={x:Static BooleanToVisibilityConverter.Default}}"
                    Margin="0,10,0,10"&gt;
            &lt;TextBlock Text="{Binding ProgressStage}" Margin="0,0,0,5"/&gt;
            &lt;ProgressBar Value="{Binding ProgressPercent}"
                         Height="20"
                         Minimum="0"
                         Maximum="100"/&gt;
            &lt;TextBlock Text="{Binding CurrentFile}"
                       FontSize="10"
                       Foreground="Gray"
                       Margin="0,2,0,0"/&gt;
        &lt;/StackPanel&gt;

        &lt;!-- Status --&gt;
        &lt;TextBlock Grid.Row="5"
                   Text="{Binding StatusMessage}"
                   Margin="0,5,0,10"
                   Foreground="{Binding StatusColor}"
                   FontWeight="Bold"/&gt;

        &lt;!-- Buttons --&gt;
        &lt;StackPanel Grid.Row="6"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"&gt;
            &lt;Button Content="Refresh Preview"
                    Command="{Binding RefreshPreviewCommand}"
                    Width="120"
                    Height="30"
                    Margin="0,0,10,0"
                    IsEnabled="{Binding CanRefresh}"/&gt;
            &lt;Button Content="Export"
                    Command="{Binding ExportCommand}"
                    Width="80"
                    Height="30"
                    Margin="0,0,10,0"
                    IsDefault="True"
                    IsEnabled="{Binding CanExport}"/&gt;
            &lt;Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    Width="80"
                    Height="30"
                    IsCancel="True"/&gt;
        &lt;/StackPanel&gt;
    &lt;/Grid&gt;
&lt;/Window&gt;