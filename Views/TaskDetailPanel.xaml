<UserControl x:Class="TaskMaster.Views.TaskDetailPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#141925" BorderBrush="#374151" BorderThickness="2,0,0,0">

    <UserControl.Resources>
        <!-- Gradient Brushes -->
        <LinearGradientBrush x:Key="PurplePinkGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#7C3AED" Offset="0"/>
            <GradientStop Color="#EC4899" Offset="1"/>
        </LinearGradientBrush>

        <!-- Beautiful Card Style -->
        <Style x:Key="BeautifulCard" TargetType="Border">
            <Setter Property="Background" Value="#1F2937"/>
            <Setter Property="BorderBrush" Value="#374151"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="0" Color="#000000" Opacity="0.2" BlurRadius="16"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Beautiful Input Style -->
        <Style x:Key="BeautifulTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#0F172A"/>
            <Setter Property="BorderBrush" Value="#374151"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#F9FAFB"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0" Color="#7C3AED" Opacity="0" BlurRadius="8"/>
                            </Border.Effect>
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="false"
                                        HorizontalScrollBarVisibility="Hidden"
                                        VerticalScrollBarVisibility="Auto"
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" TargetName="border" Value="#7C3AED"/>
                                <Setter Property="Effect" TargetName="border">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" Color="#7C3AED" Opacity="0.2" BlurRadius="12"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" TargetName="border" Value="#EC4899"/>
                                <Setter Property="Effect" TargetName="border">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" Color="#EC4899" Opacity="0.3" BlurRadius="16"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Beautiful ComboBox Style -->
        <Style x:Key="BeautifulComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#1F2937"/>
            <Setter Property="BorderBrush" Value="#374151"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#F9FAFB"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton" Grid.Column="2"
                                        Focusable="false" IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        ClickMode="Press" Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="6">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="16"/>
                                                </Grid.ColumnDefinitions>
                                                <Path x:Name="Arrow" Grid.Column="1" Fill="#9CA3AF" HorizontalAlignment="Center"
                                                      VerticalAlignment="Center" Data="M 0 0 L 3 3 L 6 0 Z"/>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" TargetName="border" Value="#7C3AED"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite" IsHitTestVisible="False"
                                            Content="{TemplateBinding SelectionBoxItem}"
                                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                            ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                            Margin="{TemplateBinding Padding}" VerticalAlignment="Center"
                                            HorizontalAlignment="Left"/>
                            <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Grid x:Name="DropDown" SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}" MaxHeight="200">
                                    <Border x:Name="DropDownBorder" Background="#1F2937" BorderThickness="1"
                                            BorderBrush="#374151" CornerRadius="6" Margin="0,2,0,0">
                                        <Border.Effect>
                                            <DropShadowEffect ShadowDepth="0" Color="#000000" Opacity="0.3" BlurRadius="12"/>
                                        </Border.Effect>
                                        <ScrollViewer SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True"/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#EC4899"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="#F9FAFB"/>
                        <Setter Property="Padding" Value="8,4"/>
                        <Setter Property="FontSize" Value="12"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBoxItem">
                                    <Border x:Name="border" Background="{TemplateBinding Background}"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" TargetName="border" Value="#374151"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" TargetName="border" Value="#7C3AED"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Beautiful Button Styles -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PurplePinkGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="10">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0" Color="#7C3AED" Opacity="0.4" BlurRadius="12"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Effect" TargetName="border">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" Color="#7C3AED" Opacity="0.6" BlurRadius="16"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransform" TargetName="border">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransformOrigin" TargetName="border" Value="0.5,0.5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform" TargetName="border">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#374151"/>
            <Setter Property="Foreground" Value="#F9FAFB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#4B5563"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="90"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" TargetName="border" Value="#4B5563"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="#7C3AED"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" TargetName="border" Value="#6B7280"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GhostButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#9CA3AF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" TargetName="border" Value="#374151"/>
                                <Setter Property="Foreground" Value="#F9FAFB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" TargetName="border" Value="#4B5563"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Beautiful Dark Header -->
        <Border Grid.Row="0" Background="#1A1F2E" BorderBrush="#374151" BorderThickness="0,0,0,1" Padding="20,14">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" Color="#000000" Opacity="0.1" BlurRadius="8"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ“‹" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#00D4AA" Offset="0"/>
                                <GradientStop Color="#7C3AED" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                    </TextBlock>
                    <TextBlock Text="Task Details" FontSize="15" FontWeight="SemiBold"
                               Foreground="{StaticResource PurplePinkGradient}" VerticalAlignment="Center"/>
                </StackPanel>
                <Button Grid.Column="1" Content="âœ•" Name="CloseButton" Click="CloseButton_Click"
                        Style="{StaticResource GhostButton}" FontSize="16" Width="32" Height="32" Padding="0"/>
            </Grid>
        </Border>

        <!-- Task Details Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="24,20">
            <StackPanel>
                <!-- Basic Information Card -->
                <Border Style="{StaticResource BeautifulCard}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="â„¹ï¸" FontSize="12" Margin="0,0,6,0" VerticalAlignment="Center">
                                <TextBlock.Foreground>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#60A5FA" Offset="0"/>
                                        <GradientStop Color="#3B82F6" Offset="1"/>
                                    </LinearGradientBrush>
                                </TextBlock.Foreground>
                            </TextBlock>
                            <TextBlock Text="Basic Information" FontWeight="SemiBold" FontSize="12"
                                       Foreground="#F9FAFB" VerticalAlignment="Center"/>
                        </StackPanel>

                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Task Number" FontWeight="Medium" FontSize="11"
                                           Foreground="#D1D5DB" Margin="0,0,0,6"/>
                                <Border Background="#0F172A" CornerRadius="6" Padding="10,6" BorderBrush="#374151" BorderThickness="1">
                                    <TextBlock Text="{Binding Number, StringFormat='#{0}'}" FontSize="12"
                                               Foreground="#7C3AED" FontWeight="SemiBold"/>
                                </Border>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Complexity" FontWeight="Medium" FontSize="11"
                                           Foreground="#D1D5DB" Margin="0,0,0,6"/>
                                <Border CornerRadius="6" Padding="10,6" BorderThickness="1" MinWidth="80"
                                        Background="{Binding OriginalTask.ComplexityScore, Converter={StaticResource ComplexityToColorConverter}}"
                                        BorderBrush="{Binding OriginalTask.ComplexityScore, Converter={StaticResource ComplexityToColorConverter}}">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="âš¡" FontSize="14" Foreground="White" Margin="0,0,4,0"/>
                                        <TextBlock Text="{Binding OriginalTask.ComplexityScore}" FontSize="12"
                                                   Foreground="White" FontWeight="SemiBold"/>
                                        <TextBlock Text="/100" FontSize="10" Foreground="White" VerticalAlignment="Bottom" Opacity="0.8"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Grid>

                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Title" FontWeight="Medium" FontSize="11"
                                       Foreground="#D1D5DB" Margin="0,0,0,6"/>
                            <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource BeautifulTextBox}" Height="32"/>
                        </StackPanel>

                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Type" FontWeight="Medium" FontSize="11"
                                           Foreground="#D1D5DB" Margin="0,0,0,6"/>
                                <ComboBox SelectedValue="{Binding Type}" Style="{StaticResource BeautifulComboBox}">
                                    <ComboBoxItem Content="ðŸš€ feature"/>
                                    <ComboBoxItem Content="ðŸ› bug"/>
                                    <ComboBoxItem Content="âœ¨ enhancement"/>
                                    <ComboBoxItem Content="ðŸ§ª test"/>
                                    <ComboBoxItem Content="ðŸ”§ refactor"/>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Status" FontWeight="Medium" FontSize="11"
                                           Foreground="#D1D5DB" Margin="0,0,0,6"/>
                                <ComboBox SelectedValue="{Binding Status}" Style="{StaticResource BeautifulComboBox}">
                                    <ComboBoxItem Content="ðŸ“ Todo"/>
                                    <ComboBoxItem Content="â³ InProgress"/>
                                    <ComboBoxItem Content="âœ… Done"/>
                                    <ComboBoxItem Content="âŒ Cancelled"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>

                        <StackPanel>
                            <TextBlock Text="Summary" FontWeight="Medium" FontSize="11"
                                       Foreground="#D1D5DB" Margin="0,0,0,6"/>
                            <TextBox Text="{Binding Summary, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource BeautifulTextBox}" TextWrapping="Wrap"
                                     AcceptsReturn="True" Height="80"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Detailed Specifications Card -->
                <Border Style="{StaticResource BeautifulCard}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="ðŸ“‹" FontSize="12" Margin="0,0,6,0" VerticalAlignment="Center">
                                <TextBlock.Foreground>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#F59E0B" Offset="0"/>
                                        <GradientStop Color="#EAB308" Offset="1"/>
                                    </LinearGradientBrush>
                                </TextBlock.Foreground>
                            </TextBlock>
                            <TextBlock Text="Detailed Specifications" FontWeight="SemiBold" FontSize="12"
                                       Foreground="#F9FAFB" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Acceptance Criteria" FontWeight="Medium" FontSize="11"
                                       Foreground="#D1D5DB" Margin="0,0,0,6"/>
                            <TextBox Text="{Binding AcceptanceCriteria, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource BeautifulTextBox}" TextWrapping="Wrap"
                                     AcceptsReturn="True" Height="80" FontFamily="Consolas" FontSize="11"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Test Plan" FontWeight="Medium" FontSize="11"
                                       Foreground="#D1D5DB" Margin="0,0,0,6"/>
                            <TextBox Text="{Binding TestPlan, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource BeautifulTextBox}" TextWrapping="Wrap"
                                     AcceptsReturn="True" Height="80" FontFamily="Consolas" FontSize="11"/>
                        </StackPanel>

                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Scope Paths" FontWeight="Medium" FontSize="11"
                                           Foreground="#D1D5DB" Margin="0,0,0,6"/>
                                <TextBox Text="{Binding ScopePaths, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource BeautifulTextBox}" TextWrapping="Wrap"
                                         AcceptsReturn="True" Height="70" FontFamily="Consolas" FontSize="11"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Required Docs" FontWeight="Medium" FontSize="11"
                                           Foreground="#D1D5DB" Margin="0,0,0,6"/>
                                <TextBox Text="{Binding RequiredDocs, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource BeautifulTextBox}" TextWrapping="Wrap"
                                         AcceptsReturn="True" Height="70" FontFamily="Consolas" FontSize="11"/>
                            </StackPanel>
                        </Grid>

                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Non-Goals" FontWeight="Medium" FontSize="11"
                                       Foreground="#D1D5DB" Margin="0,0,0,6"/>
                            <TextBox Text="{Binding NonGoals, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource BeautifulTextBox}" TextWrapping="Wrap"
                                     AcceptsReturn="True" Height="60"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Notes" FontWeight="Medium" FontSize="11"
                                       Foreground="#D1D5DB" Margin="0,0,0,6"/>
                            <TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource BeautifulTextBox}" TextWrapping="Wrap"
                                     AcceptsReturn="True" Height="70"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Beautiful Action Footer -->
        <Border Grid.Row="2" Background="#1A1F2E" BorderBrush="#374151" BorderThickness="0,1,0,0" Padding="24,18">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="-2" Color="#000000" Opacity="0.1" BlurRadius="8"/>
            </Border.Effect>
            <StackPanel>
                <!-- Primary Actions -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,12">
                    <Button Content="ðŸ’¾ Save" Command="{Binding SaveTaskCommand}"
                            Style="{StaticResource PrimaryButton}" Margin="0,0,10,0" Height="32" FontSize="12"/>
                    <Button Content="ðŸ¤– AI Assist" Command="{Binding InferSpecCommand}"
                            Style="{StaticResource SecondaryButton}" Margin="0,0,10,0" Height="32" FontSize="12"/>
                    <Button Content="ðŸŒ³ Decompose" Command="{Binding SuggestDecompositionCommand}"
                            Style="{StaticResource SecondaryButton}" Margin="0,0,10,0" Height="32" FontSize="12"
                            ToolTip="Analyze complexity and suggest task decomposition"/>
                    <Button Content="Cancel" Command="{Binding CancelChangesCommand}"
                            Style="{StaticResource GhostButton}" Height="32" FontSize="12"/>
                </StackPanel>

                <!-- Pipeline Actions -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="ðŸŽ¯ Panel" Command="{Binding RunPanelCommand}"
                            Style="{StaticResource GhostButton}" Margin="0,0,10,0" Height="28" FontSize="11"/>
                    <Button Content="ðŸš€ Update" Command="{Binding RunUpdateCommand}"
                            Style="{StaticResource GhostButton}" Height="28" FontSize="11"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>