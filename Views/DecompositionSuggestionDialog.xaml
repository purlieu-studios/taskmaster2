<UserControl x:Class="TaskMaster.Views.DecompositionSuggestionDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:TaskMaster.ViewModels"
             xmlns:converters="clr-namespace:TaskMaster.Converters">

    <UserControl.Resources>
        <!-- Design System Resources -->
        <SolidColorBrush x:Key="CardBackground" Color="#1A1F2E"/>
        <SolidColorBrush x:Key="BorderColor" Color="#3A3F4B"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#F9FAFB"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#D1D5DB"/>
        <SolidColorBrush x:Key="TextMuted" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="ElevatedSurface" Color="#374151"/>

        <DropShadowEffect x:Key="CardShadow" ShadowDepth="0" Color="#000000" Opacity="0.25" BlurRadius="16"/>
    </UserControl.Resources>

    <!-- Overlay Background -->
    <Grid Background="#80000000">
        <!-- Centered Dialog -->
        <Border Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="1"
                CornerRadius="16"
                Padding="32"
                MaxWidth="600"
                MaxHeight="500"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Effect="{StaticResource CardShadow}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="ðŸŒ³" FontSize="24" Margin="0,0,12,0" VerticalAlignment="Center"/>
                        <StackPanel>
                            <TextBlock Text="Task Decomposition Suggested"
                                       FontSize="20" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock Text="This task appears complex enough to benefit from breaking down into subtasks"
                                       FontSize="13" Foreground="{StaticResource TextMuted}" Margin="0,4,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <Button Grid.Column="1" Content="âœ•"
                            Command="{Binding DismissDecompositionSuggestionCommand}"
                            Background="Transparent" BorderThickness="0"
                            Foreground="{StaticResource TextMuted}"
                            FontSize="16" Width="24" Height="24"
                            HorizontalAlignment="Right" VerticalAlignment="Top"/>
                </Grid>

                <!-- Complexity Info -->
                <Border Grid.Row="1" Background="{StaticResource ElevatedSurface}"
                        CornerRadius="8" Padding="16" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Complexity Score" FontSize="11"
                                       Foreground="{StaticResource TextMuted}" FontWeight="Medium"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock Text="âš¡" FontSize="16" Foreground="#F59E0B" Margin="0,0,4,0"/>
                                <TextBlock Text="{Binding DecompositionSuggestion.ComplexityScore}"
                                           FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                                <TextBlock Text="/100" FontSize="12"
                                           Foreground="{StaticResource TextMuted}" VerticalAlignment="Bottom"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Strategy" FontSize="11"
                                       Foreground="{StaticResource TextMuted}" FontWeight="Medium"/>
                            <TextBlock Text="{Binding DecompositionSuggestion.Strategy}"
                                       FontSize="14" FontWeight="Medium" Foreground="{StaticResource TextSecondary}" Margin="0,4,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Suggested Subtasks" FontSize="11"
                                       Foreground="{StaticResource TextMuted}" FontWeight="Medium"/>
                            <TextBlock Text="{Binding DecompositionSuggestion.SuggestedSubtasks.Count}"
                                       FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Subtask List -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="0,0,0,20">
                    <ItemsControl ItemsSource="{Binding DecompositionSuggestion.SuggestedSubtasks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource CardBackground}"
                                        BorderBrush="{StaticResource BorderColor}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="16"
                                        Margin="0,0,0,12">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Title and Effort -->
                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="{Binding Title}"
                                                       FontWeight="SemiBold" FontSize="14"
                                                       Foreground="{StaticResource TextPrimary}"
                                                       TextWrapping="Wrap"/>

                                            <Border Grid.Column="1" Background="#4B5563"
                                                    CornerRadius="4" Padding="6,2" Margin="8,0,0,0">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="â±ï¸" FontSize="10" Margin="0,0,2,0"/>
                                                    <TextBlock Text="{Binding EstimatedEffort}" FontSize="10"
                                                               Foreground="{StaticResource TextSecondary}"/>
                                                    <TextBlock Text=" pts" FontSize="10"
                                                               Foreground="{StaticResource TextSecondary}"/>
                                                </StackPanel>
                                            </Border>
                                        </Grid>

                                        <!-- Summary -->
                                        <TextBlock Grid.Row="1" Text="{Binding Summary}"
                                                   FontSize="12" Foreground="{StaticResource TextMuted}"
                                                   TextWrapping="Wrap" Margin="0,8,0,0"/>

                                        <!-- Acceptance Criteria Count -->
                                        <TextBlock Grid.Row="2" Margin="0,8,0,0">
                                            <Run Text="{Binding AcceptanceCriteria.Count}" Foreground="#10B981"/>
                                            <Run Text=" acceptance criteria" Foreground="{StaticResource TextMuted}" FontSize="11"/>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Action Buttons -->
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Reason Text -->
                    <TextBlock Grid.Column="0" Text="{Binding DecompositionSuggestion.Reason}"
                               FontSize="12" Foreground="{StaticResource TextMuted}"
                               VerticalAlignment="Center" TextWrapping="Wrap"/>

                    <!-- Reject Button -->
                    <Button Grid.Column="1" Content="Keep as Single Task"
                            Command="{Binding RejectDecompositionCommand}"
                            Background="{StaticResource ElevatedSurface}"
                            BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="1"
                            Foreground="{StaticResource TextSecondary}"
                            Padding="16,8" Margin="0,0,12,0"
                            FontSize="13" FontWeight="Medium">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource BorderColor}"/>
                                        <Setter Property="BorderBrush" Value="#7C3AED"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Accept Button -->
                    <Button Grid.Column="2" Content="Create Subtasks"
                            Command="{Binding AcceptDecompositionCommand}"
                            Background="#7C3AED" BorderBrush="#7C3AED" BorderThickness="1"
                            Foreground="White" Padding="20,8" FontSize="13" FontWeight="SemiBold">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#6D28D9"/>
                                        <Setter Property="BorderBrush" Value="#6D28D9"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>