<Window x:Class="TaskMaster.Views.DeleteConfirmationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Delete Task" Height="380" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1A1F2E"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <!-- Design System Colors (consistent with MainWindow) -->
        <SolidColorBrush x:Key="PrimaryBackground" Color="#0F1419"/>
        <SolidColorBrush x:Key="CardBackground" Color="#1A1F2E"/>
        <SolidColorBrush x:Key="ElevatedSurface" Color="#252A37"/>
        <SolidColorBrush x:Key="BorderColor" Color="#3A3F4B"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#F9FAFB"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#D1D5DB"/>
        <SolidColorBrush x:Key="TextMuted" Color="#9CA3AF"/>

        <!-- Standard Shadows -->
        <DropShadowEffect x:Key="CardShadow" ShadowDepth="0" Color="#000000" Opacity="0.15" BlurRadius="12"/>
        <DropShadowEffect x:Key="HoverShadow" ShadowDepth="0" Color="#7C3AED" Opacity="0.2" BlurRadius="24"/>
    </Window.Resources>

    <Window.Effect>
        <StaticResource ResourceKey="HoverShadow"/>
    </Window.Effect>

    <Border Background="{StaticResource CardBackground}" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" CornerRadius="12">
        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Warning Icon and Title -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <Grid Width="48" Height="48" Margin="0,0,16,0">
                    <Ellipse Width="48" Height="48" Fill="#EF4444">
                        <Ellipse.Effect>
                            <DropShadowEffect ShadowDepth="0" Color="#EF4444" Opacity="0.3" BlurRadius="12"/>
                        </Ellipse.Effect>
                    </Ellipse>
                    <TextBlock Text="âš " FontSize="28" Foreground="White"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
                <TextBlock Text="Delete Task" FontSize="24" FontWeight="Bold"
                           Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Confirmation Message -->
            <TextBlock Grid.Row="1" FontSize="16" Foreground="{StaticResource TextSecondary}"
                       TextAlignment="Center" Margin="0,0,0,24" TextWrapping="Wrap">
                Are you sure you want to delete this task? This action cannot be undone.
            </TextBlock>

            <!-- Task Preview Card -->
            <Border Grid.Row="2" Background="{StaticResource ElevatedSurface}" BorderBrush="{StaticResource BorderColor}" BorderThickness="1"
                    CornerRadius="8" Padding="20" Margin="0,0,0,24">
                <Border.Effect>
                    <StaticResource ResourceKey="CardShadow"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Task Number and Title -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                        <Border Background="{StaticResource BorderColor}" CornerRadius="4" Padding="6,3" Margin="0,0,12,0">
                            <TextBlock x:Name="TaskNumberText" Text="#0" FontSize="12"
                                       FontWeight="Bold" Foreground="{StaticResource TextSecondary}"/>
                        </Border>
                        <TextBlock x:Name="TaskTitleText" Text="Task Title" FontSize="16"
                                   FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" TextTrimming="CharacterEllipsis"/>
                    </StackPanel>

                    <!-- Task Summary -->
                    <TextBlock Grid.Row="1" x:Name="TaskSummaryText" Text="Task Summary"
                               FontSize="14" Foreground="{StaticResource TextMuted}" TextWrapping="Wrap"
                               MaxHeight="60" TextTrimming="CharacterEllipsis"/>
                </Grid>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="CancelButton" Content="Cancel" Width="100" Height="36"
                        Margin="0,0,12,0" Click="CancelButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="{StaticResource ElevatedSurface}"/>
                            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                                            <Border.Effect>
                                                <StaticResource ResourceKey="CardShadow"/>
                                            </Border.Effect>
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" TargetName="border" Value="#7C3AED"/>
                                                <Setter Property="Effect" TargetName="border">
                                                    <Setter.Value>
                                                        <StaticResource ResourceKey="HoverShadow"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="DeleteButton" Content="Delete Task" Width="120" Height="36"
                        Click="DeleteButton_Click" IsDefault="True">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#EF4444"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                                            <Border.Effect>
                                                <DropShadowEffect ShadowDepth="0" Color="#EF4444"
                                                                  Opacity="0.3" BlurRadius="12"/>
                                            </Border.Effect>
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" TargetName="border" Value="#DC2626"/>
                                                <Setter Property="Effect" TargetName="border">
                                                    <Setter.Value>
                                                        <DropShadowEffect ShadowDepth="0" Color="#EF4444" Opacity="0.5" BlurRadius="16"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" TargetName="border" Value="#B91C1C"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>