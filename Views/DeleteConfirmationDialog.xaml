<Window x:Class="TaskMaster.Views.DeleteConfirmationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Delete Task" Height="380" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1A1F2E"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Effect>
        <DropShadowEffect ShadowDepth="0" Color="#000000" Opacity="0.4" BlurRadius="20"/>
    </Window.Effect>

    <Border Background="#1A1F2E" BorderBrush="#374151" BorderThickness="1" CornerRadius="12">
        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Warning Icon and Title -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <Ellipse Width="48" Height="48" Fill="#EF4444" Margin="0,0,16,0">
                    <Ellipse.Effect>
                        <DropShadowEffect ShadowDepth="0" Color="#EF4444" Opacity="0.3" BlurRadius="12"/>
                    </Ellipse.Effect>
                </Ellipse>
                <TextBlock Text="âš " FontSize="28" Foreground="White" VerticalAlignment="Center"
                           HorizontalAlignment="Center" Margin="-44,0,28,0"/>
                <TextBlock Text="Delete Task" FontSize="24" FontWeight="Bold"
                           Foreground="#F9FAFB" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Confirmation Message -->
            <TextBlock Grid.Row="1" FontSize="16" Foreground="#D1D5DB"
                       TextAlignment="Center" Margin="0,0,0,24" TextWrapping="Wrap">
                Are you sure you want to delete this task? This action cannot be undone.
            </TextBlock>

            <!-- Task Preview Card -->
            <Border Grid.Row="2" Background="#111827" BorderBrush="#374151" BorderThickness="1"
                    CornerRadius="8" Padding="20" Margin="0,0,0,24">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="0" Color="#000000" Opacity="0.2" BlurRadius="4"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Task Number and Title -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                        <Border Background="#374151" CornerRadius="4" Padding="6,3" Margin="0,0,12,0">
                            <TextBlock x:Name="TaskNumberText" Text="#0" FontSize="12"
                                       FontWeight="Bold" Foreground="#D1D5DB"/>
                        </Border>
                        <TextBlock x:Name="TaskTitleText" Text="Task Title" FontSize="16"
                                   FontWeight="SemiBold" Foreground="#F9FAFB" TextTrimming="CharacterEllipsis"/>
                    </StackPanel>

                    <!-- Task Summary -->
                    <TextBlock Grid.Row="1" x:Name="TaskSummaryText" Text="Task Summary"
                               FontSize="14" Foreground="#9CA3AF" TextWrapping="Wrap"
                               MaxHeight="60" TextTrimming="CharacterEllipsis"/>
                </Grid>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="CancelButton" Content="Cancel" Width="100" Height="36"
                        Margin="0,0,12,0" Click="CancelButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#374151"/>
                            <Setter Property="Foreground" Value="#F9FAFB"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="BorderBrush" Value="#6B7280"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#4B5563"/>
                                    <Setter Property="BorderBrush" Value="#9CA3AF"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#6B7280"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="DeleteButton" Content="Delete Task" Width="120" Height="36"
                        Click="DeleteButton_Click" IsDefault="True">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#EF4444"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                                            <Border.Effect>
                                                <DropShadowEffect ShadowDepth="0" Color="#EF4444"
                                                                  Opacity="0.3" BlurRadius="8"/>
                                            </Border.Effect>
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#DC2626"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#B91C1C"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>