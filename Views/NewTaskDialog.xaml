<Window x:Class="TaskMaster.Views.NewTaskDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create New Task" Height="600" Width="700"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize"
        Background="#0A0E1B"
        MinHeight="500" MinWidth="600"
        MaxHeight="800" MaxWidth="900">

    <Window.Resources>
        <!-- Gradient Brushes -->
        <LinearGradientBrush x:Key="PurplePinkGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#7C3AED" Offset="0"/>
            <GradientStop Color="#EC4899" Offset="1"/>
        </LinearGradientBrush>

        <!-- Beautiful Input Style -->
        <Style x:Key="BeautifulTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#1F2937"/>
            <Setter Property="BorderBrush" Value="#374151"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#F9FAFB"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#7C3AED"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#EC4899"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Beautiful ComboBox Style -->
        <Style x:Key="BeautifulComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#1F2937"/>
            <Setter Property="BorderBrush" Value="#374151"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#F9FAFB"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#7C3AED"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#EC4899"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Gradient Primary Button -->
        <Style x:Key="GradientPrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PurplePinkGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="12">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0" Color="#7C3AED" Opacity="0.5" BlurRadius="16"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Effect" TargetName="border">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" Color="#7C3AED" Opacity="0.7" BlurRadius="20"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransform" TargetName="border">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransformOrigin" TargetName="border" Value="0.5,0.5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform" TargetName="border">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Ghost Button Style -->
        <Style x:Key="GhostButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#9CA3AF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="12" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" TargetName="border" Value="#374151"/>
                                <Setter Property="Foreground" Value="#F9FAFB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" TargetName="border" Value="#4B5563"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Main Content with ScrollViewer -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
                      Padding="40,30">
            <Border Background="#141925" CornerRadius="16"
                    BorderBrush="#374151" BorderThickness="1"
                    Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="0" Color="#000000" Opacity="0.3" BlurRadius="16"/>
                </Border.Effect>

                <StackPanel Margin="32,24">
                <!-- Beautiful Header -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,28">
                    <TextBlock Text="✨" FontSize="20" Margin="0,0,10,0" VerticalAlignment="Center">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#FFD700" Offset="0"/>
                                <GradientStop Color="#FF69B4" Offset="0.5"/>
                                <GradientStop Color="#8A2BE2" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                    </TextBlock>
                    <TextBlock Text="Create New Task" FontSize="20" FontWeight="Bold"
                               Foreground="{StaticResource PurplePinkGradient}" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Project Selection -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Project" FontWeight="SemiBold" Margin="0,0,0,12"
                               Foreground="#F9FAFB" FontSize="15"/>
                    <ComboBox Name="ProjectComboBox"
                              ItemsSource="{Binding Projects}"
                              SelectedItem="{Binding SelectedProject}"
                              DisplayMemberPath="Name"
                              Style="{StaticResource BeautifulComboBox}"/>
                    <TextBlock Text="Select the project this task belongs to"
                               Foreground="#D1D5DB" FontSize="12" Margin="0,8,0,0"/>
                </StackPanel>

                <!-- Task Title -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Task Title" FontWeight="SemiBold" Margin="0,0,0,12"
                               Foreground="#F9FAFB" FontSize="15"/>
                    <TextBox Name="TitleTextBox"
                             Text="{Binding TaskTitle, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource BeautifulTextBox}"/>
                    <TextBlock Text="Brief, descriptive title for the task"
                               Foreground="#D1D5DB" FontSize="12" Margin="0,8,0,0"/>
                </StackPanel>

                <!-- Task Type -->
                <StackPanel Margin="0,0,0,24">
                    <TextBlock Text="Task Type" FontWeight="SemiBold" Margin="0,0,0,12"
                               Foreground="#F9FAFB" FontSize="15"/>
                    <ComboBox Name="TypeComboBox"
                              SelectedValue="{Binding TaskType}"
                              Style="{StaticResource BeautifulComboBox}">
                        <ComboBoxItem Content="🚀 feature" IsSelected="True"/>
                        <ComboBoxItem Content="🐛 bug"/>
                        <ComboBoxItem Content="✨ enhancement"/>
                        <ComboBoxItem Content="🧪 test"/>
                        <ComboBoxItem Content="🔧 refactor"/>
                    </ComboBox>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Cancel" Name="CancelButton" Click="CancelButton_Click"
                            Style="{StaticResource GhostButton}" Margin="0,0,16,0"/>
                    <Button Content="✨ Create Task" Name="CreateButton" Click="CreateButton_Click"
                            Style="{StaticResource GradientPrimaryButton}"
                            IsEnabled="{Binding CanCreateTask}"/>
                </StackPanel>
            </StackPanel>
        </Border>
        </ScrollViewer>
    </Grid>
</Window>