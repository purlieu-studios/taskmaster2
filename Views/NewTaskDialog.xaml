<Window x:Class="TaskMaster.Views.NewTaskDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create New Task" Height="500" Width="600"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        AllowsTransparency="True" WindowStyle="None"
        Background="Transparent">

    <Window.Resources>
        <!-- Gradient Brushes -->
        <LinearGradientBrush x:Key="PurplePinkGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#7C3AED" Offset="0"/>
            <GradientStop Color="#EC4899" Offset="1"/>
        </LinearGradientBrush>

        <!-- Beautiful Input Style -->
        <Style x:Key="BeautifulTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#1F2937"/>
            <Setter Property="BorderBrush" Value="#374151"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#F9FAFB"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0" Color="#7C3AED" Opacity="0" BlurRadius="8"/>
                            </Border.Effect>
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="false"
                                        HorizontalScrollBarVisibility="Hidden"
                                        VerticalScrollBarVisibility="Hidden"
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" TargetName="border" Value="#7C3AED"/>
                                <Setter Property="Effect" TargetName="border">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" Color="#7C3AED" Opacity="0.2" BlurRadius="12"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" TargetName="border" Value="#EC4899"/>
                                <Setter Property="Effect" TargetName="border">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" Color="#EC4899" Opacity="0.4" BlurRadius="16"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Beautiful ComboBox Style -->
        <Style x:Key="BeautifulComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#1F2937"/>
            <Setter Property="BorderBrush" Value="#374151"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#F9FAFB"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton" Grid.Column="2"
                                        Focusable="false" IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        ClickMode="Press" Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="12">
                                            <Border.Effect>
                                                <DropShadowEffect ShadowDepth="0" Color="#7C3AED" Opacity="0" BlurRadius="8"/>
                                            </Border.Effect>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="24"/>
                                                </Grid.ColumnDefinitions>
                                                <Path x:Name="Arrow" Grid.Column="1" Fill="#9CA3AF" HorizontalAlignment="Center"
                                                      VerticalAlignment="Center" Data="M 0 0 L 4 4 L 8 0 Z"/>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" TargetName="border" Value="#7C3AED"/>
                                                <Setter Property="Effect" TargetName="border">
                                                    <Setter.Value>
                                                        <DropShadowEffect ShadowDepth="0" Color="#7C3AED" Opacity="0.2" BlurRadius="12"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite" IsHitTestVisible="False"
                                            Content="{TemplateBinding SelectionBoxItem}"
                                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                            ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                            Margin="{TemplateBinding Padding}" VerticalAlignment="Center"
                                            HorizontalAlignment="Left"/>
                            <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Grid x:Name="DropDown" SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}" MaxHeight="200">
                                    <Border x:Name="DropDownBorder" Background="#1F2937" BorderThickness="2"
                                            BorderBrush="#374151" CornerRadius="12" Margin="0,4,0,0">
                                        <Border.Effect>
                                            <DropShadowEffect ShadowDepth="0" Color="#000000" Opacity="0.3" BlurRadius="16"/>
                                        </Border.Effect>
                                        <ScrollViewer SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True"/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#EC4899"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Gradient Primary Button -->
        <Style x:Key="GradientPrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PurplePinkGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="12">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0" Color="#7C3AED" Opacity="0.5" BlurRadius="16"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Effect" TargetName="border">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" Color="#7C3AED" Opacity="0.7" BlurRadius="20"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransform" TargetName="border">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransformOrigin" TargetName="border" Value="0.5,0.5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform" TargetName="border">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Ghost Button Style -->
        <Style x:Key="GhostButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#9CA3AF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="12" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" TargetName="border" Value="#374151"/>
                                <Setter Property="Foreground" Value="#F9FAFB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" TargetName="border" Value="#4B5563"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Beautiful Modal Overlay -->
        <Border Background="#000000" Opacity="0.6"/>

        <!-- Glass Morphism Modal Card -->
        <Border Background="#141925" CornerRadius="20" MaxWidth="540" MaxHeight="480"
                HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20"
                BorderBrush="#374151" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" Color="#000000" Opacity="0.4" BlurRadius="32"/>
            </Border.Effect>

            <StackPanel Margin="40,36">
                <!-- Beautiful Header -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,28">
                    <TextBlock Text="✨" FontSize="20" Margin="0,0,10,0" VerticalAlignment="Center">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#FFD700" Offset="0"/>
                                <GradientStop Color="#FF69B4" Offset="0.5"/>
                                <GradientStop Color="#8A2BE2" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                    </TextBlock>
                    <TextBlock Text="Create New Task" FontSize="20" FontWeight="Bold"
                               Foreground="{StaticResource PurplePinkGradient}" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Project Selection -->
                <StackPanel Margin="0,0,0,24">
                    <TextBlock Text="Project" FontWeight="SemiBold" Margin="0,0,0,12"
                               Foreground="#F9FAFB" FontSize="15"/>
                    <ComboBox Name="ProjectComboBox"
                              ItemsSource="{Binding Projects}"
                              SelectedItem="{Binding SelectedProject}"
                              DisplayMemberPath="Name"
                              Style="{StaticResource BeautifulComboBox}"/>
                    <TextBlock Text="Select the project this task belongs to"
                               Foreground="#D1D5DB" FontSize="12" Margin="0,8,0,0"/>
                </StackPanel>

                <!-- Task Title -->
                <StackPanel Margin="0,0,0,24">
                    <TextBlock Text="Task Title" FontWeight="SemiBold" Margin="0,0,0,12"
                               Foreground="#F9FAFB" FontSize="15"/>
                    <TextBox Name="TitleTextBox"
                             Text="{Binding TaskTitle, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource BeautifulTextBox}"/>
                    <TextBlock Text="Brief, descriptive title for the task"
                               Foreground="#D1D5DB" FontSize="12" Margin="0,8,0,0"/>
                </StackPanel>

                <!-- Task Type -->
                <StackPanel Margin="0,0,0,36">
                    <TextBlock Text="Task Type" FontWeight="SemiBold" Margin="0,0,0,12"
                               Foreground="#F9FAFB" FontSize="15"/>
                    <ComboBox Name="TypeComboBox"
                              SelectedValue="{Binding TaskType}"
                              Style="{StaticResource BeautifulComboBox}">
                        <ComboBoxItem Content="🚀 feature" IsSelected="True"/>
                        <ComboBoxItem Content="🐛 bug"/>
                        <ComboBoxItem Content="✨ enhancement"/>
                        <ComboBoxItem Content="🧪 test"/>
                        <ComboBoxItem Content="🔧 refactor"/>
                    </ComboBox>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Cancel" Name="CancelButton" Click="CancelButton_Click"
                            Style="{StaticResource GhostButton}" Margin="0,0,16,0"/>
                    <Button Content="✨ Create Task" Name="CreateButton" Click="CreateButton_Click"
                            Style="{StaticResource GradientPrimaryButton}"
                            IsEnabled="{Binding CanCreateTask}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>